/* pages/live/list.wxss */

.container {
  background-color: #f5f5f5;
}

.top-title {
  height: 88rpx;
  position: relative;
  font-size: 36rpx;
  color: #fff;
  padding: 0 30rpx;
}

.container {
  padding-top: 88rpx;
}

.top-bg {
  width: 750rpx;
  height: 438rpx;
  position: absolute;
  top: 0rpx;
  background: linear-gradient(322deg, rgba(255, 76, 0, 1) 0%, rgba(255, 0, 67, 1) 100%);
}

.back-btn {
  width: 24rpx;
  height: 36rpx;
}

.select-btn {
  width: 40rpx;
  height: 40rpx;
}

.select-top {
  color: #fff;
  position: relative;
  font-size: 32rpx;
  padding: 0 30rpx;
  white-space: nowrap;
  width: 750rpx;
  box-sizing: border-box;

}
.select-top .select-top-item{
  display: inline-block;
  margin-right:40rpx ;
}
.select-top .selected {
  font-size: 36rpx;
  border-bottom: 4rpx solid #fff;
  font-weight: 600;
}

.card-swiper {
  margin-top: 24rpx;
  height: 420rpx !important;
  position: relative;
  padding-left: 40rpx;
}

.card-swiper swiper-item {
  width: 420rpx !important;
  /* left: 70rpx; */
  box-sizing: border-box;
  /* padding: 40rpx 0rpx 70rpx; */
  overflow: initial;
}

.card-swiper swiper-item .swiper-item {
  width: 100%;
  display: block;
  height: 100%;
  border-radius: 10rpx;
  transform: scale(0.9);
  transition: all 0.2s ease-in 0s;
  overflow: hidden;
  position: relative;
}

.card-swiper swiper-item .swiper-item .swiper-img {
  width: 420rpx;
  height: 420rpx;
}

.card-swiper swiper-item.cur .swiper-item {
  transform: none;
  transition: all 0.2s ease-in 0s;
}

.top-recommend {
  /* width: 150rpx; */
  height: 36rpx;
  padding-right:  20rpx;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: rgba(71, 71, 71, 0.27);
  border-radius: 18rpx;
  /* opacity: ; */
  color: #fff;
}

.card-swiper swiper-item .swiper-item .bottom-recommend {
  width: 420rpx;
  height: 98rpx;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  background: linear-gradient(180deg, rgba(107, 107, 107, 0.8) 0%, rgba(41, 41, 41, 0.8) 100%);
  padding: 0 20rpx;
  color: #fff;
  
}

.card-swiper swiper-item.cur .swiper-item .bottom-recommend {
  background: linear-gradient(315deg, rgba(255, 76, 0, 0.8) 0%, rgba(255, 0, 67, 0.8) 100%);
}

.card-swiper swiper-item .swiper-item .bottom-recommend .head-img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 8rpx;
  border-radius: 50%;
}

.card-swiper swiper-item .swiper-item .bottom-recommend .name {
  font-size: 20rpx;
}

