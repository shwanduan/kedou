/* pages/share/apply.wxss */
@import "../apply/apply.wxss";

.con-bg {
   width: 100vw;
   height: 100vh;
   position: fixed;
   top: 0rpx;
   z-index: 1;
   background: linear-gradient(315deg, rgba(255, 0, 67, 1) 0%, rgba(255, 112, 50, 1) 100%);
}

.friend {
   margin-left: 40rpx;
   width: 318rpx;
   height: 36rpx;
   font-size: 28rpx;
   font-family: PingFangSC-Regular, PingFang SC;
   font-weight: 400;
   color: rgba(255, 255, 255, 1);
   line-height: 36rpx;
}

.join-title {
   margin-left: 30rpx;
   width: 706rpx;
   height: 114rpx;
   font-size: 72rpx;
   font-family: PangMenZhengDao;
   color: rgba(255, 255, 255, 1);
   line-height: 100rpx;
}

.form-box {
   width: 710rpx;
   height: 1141rpx;
   margin-left: 20rpx;
   background: linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 1) 100%);
   border-radius: 24rpx;
   padding-top: 24rpx;
   padding-bottom: 40rpx;
}

.type-item {
   width: 160rpx;
   height: 48rpx;
   background: rgba(255, 239, 243, 1);
   border-radius: 24px;
  margin-right: 16rpx;
}
.type-item.active{
   border: 1rpx solid rgba(224, 32, 32, 1);
}
.type-list{
   margin-left: 52rpx;
}
.sub-btn{
   margin-top: 14rpx;
}
checkbox .wx-checkbox-input {
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
 }