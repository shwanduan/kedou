.category-list .list .left, .category-list .right {
  width: 100%;
}

.category-list .list .left .img image {
  width: 100%;
  height: 375rpx;
  display: block;
}

.category-list .right .cont {
  padding: 10rpx 12rpx 0rpx 10rpx;
}

.category-list .right .cont .title {
  /* height: 72rpx; */
  line-height: 1.3;
  margin-bottom:  20rpx ;
}

.category-list.arrange .list {
  overflow: hidden;
  padding: 15rpx ;
  box-sizing: border-box;
  margin-bottom: 0rpx;
  border-bottom: 1rpx solid #f7f7f7;
  width: 100%;
}

/* .category-list.arrange .list text {
  line-height: 1.6;
} */

.category-list.arrange .list .left {
  width: 35%;
  float: left;
}

.category-list.arrange .list .right {
  width: 65%;
  float: left;
}

.category-list.arrange .list .left .img image {
  width: 180rpx;
  height: 180rpx;
}

/* 商品卖点 */

.selling_point {
  width: 100%;
  font-size: 24rpx;
  line-height: 1.4;
  color: #ff495e;
}

.goods_sales {
  color: #999;
  font-size: 24rpx;
}

/* 商品价格 */

.detail-price {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.detail-price .goods-price {
  margin-right: 8rpx;
}

.detail-price .line-price {
  text-decoration: line-through;
}
