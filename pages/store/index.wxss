/* pages/store/index.wxss */
.store-title{
  padding:0 30rpx ;
  background: #0C0A2B;
  margin-bottom: 40rpx;
}
.name{
  font-size:32rpx;
font-weight:600;
color:rgba(255,255,255,1);
line-height:32rpx;
}
.select-top {
  color: #fff;
  position: relative;
  font-size: 24rpx;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.select-top .selected {
  font-size: 28rpx;
  border-bottom: 4rpx solid #fff;
  font-weight: 600;
}
swiper{
  width:690rpx;
height:880rpx;
margin: 0 auto;
}

.scroll-view_X{
 
   white-space: nowrap;
  display:flex;
  flex-direction: row;
  flex-wrap:nowrap;

} 
.scroll-view-item_X{    
  width:300rpx;height:380rpx;
  display: inline-block;
}
.top-lump{
  width:196rpx;
height:36rpx;
background:rgba(71,71,71,0.27);
border-radius:18px;
position: absolute;
bottom: 20rpx;
left:20rpx;
overflow: hidden;
font-size: 20rpx;
color: #fff;
}
.top-lump .color-lump{
  width:68rpx;
height:36rpx;
background:linear-gradient(131deg,rgba(255,76,0,1) 0%,rgba(255,0,67,1) 100%);
}
.top-lump .playback{
  background:linear-gradient(137deg,rgba(163,206,246,1) 0%,rgba(86,128,181,1) 100%);
}
.top-lump .num{
  flex:1;
}