@import "../app.wxss";
.goods {
    margin: 0 32rpx 0 32rpx;
    display: inline-block;
    vertical-align: middle
}
.gift {
    margin: 0 40rpx 0 70rpx;
    display: inline-block;
    vertical-align: middle
}
.like {
    margin-left: 120rpx;
    display: inline-block;
    vertical-align: middle
}
.message {
    width: 300rpx;
    height: 66rpx;
    display: inline-block;
    background: rgba(0, 0, 0, 0.25);
    border-radius: 40rpx;
    border-radius: 40rpx;
    vertical-align: middle
}
.back{
    display: inline-block;
    vertical-align: middle
}
   
.editgoods{
    margin:0 50rpx ;
    color: #282828;
}
.close{
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    right: 0;
    background:rgba(40,40,40,0.5);
    z-index: 1020;
 }
 
 .more-box{
    width:750rpx;
    height:312rpx;
    position: fixed;
    bottom: 0;
    right: 0;
    background:rgba(255,255,255,1);
    border-radius:23rpx 23rpx 0px 0px;
    z-index: 1021;
    padding: 30rpx 40rpx;
 }
