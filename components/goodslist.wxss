@import "../app.wxss";                   
.goods-inner {
    padding: 0 30rpx;
    position: absolute;
    width: 100%;
    box-sizing: border-box;
    background: #FFF;
    border-radius: 10rpx 10rpx 0rpx 0rpx;
z-index: 10;
}
.goods-title {
    height: 114rpx;
    line-height: 114rpx;
    font-family: PingFangSC-Medium;
    font-size: 16px;
    color: #111111;
    letter-spacing: 0;
    text-align: left;
    display: block;
    border-bottom: 1px solid #DBDBDB;
}
.close {
    width:100vw ;
    height:100vh ;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
}
.goods-item {
    padding: 30rpx 0;
    border-bottom: 1px solid #DBDBDB;
    height: 260rpx;
    position: relative;
    box-sizing: border-box;
}
.goods-box {
    /* padding: 24rpx; */
    width: 690rpx;
}
.goods-item-img {
    width: 84rpx;
    height: 171rpx;
    margin-top: 24rpx;
}
.goods-info {
    /* display: inline-block; */
    /* vertical-align: middle; */
    padding-left: 24rpx;
}
.goods-img {
    height: 200rpx;
    width: 200rpx;
    /* display: inline-block; */
    border-radius: 5rpx;
    /* vertical-align: middle; */
}
.name {
    height: 60rpx;
    margin-bottom: 40rpx;
    letter-spacing: 0;
    line-height: 30rpx;
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(40,40,40,1);
    overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;
}
.price {
    height: 30rpx;
    line-height: 30rpx;
    font-size: 14px;
    color: #FF0042;
}
.sales{
font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(160,160,160,1);
}
.selling-full {
    border: 1rpx solid rgba(255,0,66,1);
    font-size: 20rpx;
    color: rgba(255,0,66,1);
    line-height: 20rpx;
    padding: 4rpx 10rpx;
    border-radius: 4rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    }
    
